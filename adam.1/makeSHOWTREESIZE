CC = gcc
CFLAGS = -g
TARGET = showtreesize
OBJS = showtreesize.o depthfirstapply.o sizepathfun.o
$(TARGET): $(OBJS)
	$(CC) -o $(TARGET) $(OBJS)
showtreesize.o: showtreesize.c
	$(CC) $(CFLAGS) -c showtreesize.c
depthfirstapply.o: depthfirstapply.c
	$(CC) $(CFLAGS) -c depthfirstapply.c
sizepathfun.o: sizepathfun.c
	$(CC) $(CFLAGS) -c sizepathfun.c
clean:
	/bin/rm -f *.o $(TARGET)

